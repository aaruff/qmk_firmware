# Enable mouse key support
MOUSEKEY_ENABLE = yes

# Enable extra key support (e.g., media keys)
EXTRAKEY_ENABLE = yes

# Disable console support to save space
CONSOLE_ENABLE = no

# Enable RGB lighting support
RGBLIGHT_ENABLE = no

# Enable encoder support (e.g., for rotary encoders)
ENCODER_ENABLE = yes

# Enable Link Time Optimization to reduce firmware size and improve performance
LTO_ENABLE = yes

# Enable OLED display support
OLED_ENABLE = yes

# WPM Support
WPM_ENABLE = no

# Enable Caps Word
CAPS_WORD_ENABLE = yes
